@model Post

@{
	var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
				? "/images/image_1.jpg"
				: $"/{Model.ImageUrl}";
}
<article class="blog-entry mb-4">
	<div class="card">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="@imageUrl"
					class="card-img"
					alt="@Model.Title">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">
						<a class="text-decoration-none" href="@Url.Action("post", "blog",
							new { 
								year = @Model.PostedDate.Year, 
								month = @Model.PostedDate.Month, 
								day = @Model.PostedDate.Day, 
								slug = @Model.UrlSlug })">
								@Model.Title
						</a>
					</h5>
					<p class="card-text text-decoration-none">
						<small class="text-muted">
							Tác giả:
						</small>
						<span class="text-primary ">
							<a class=" text-decoration-none" href="@Url.Action("author", "blog",
								new {slug = @Model.Author.UrlSlug })">
									@Model.Author.FullName
							</a>
						</span>
						<small class="text-muted">
							Chủ đề:
						</small>
						<span class="text-primary text-decoration-none">
							<a class=" text-decoration-none" href="@Url.Action("category", "blog",
								new {slug = @Model.Category.UrlSlug })">
									@Model.Category.Name
							</a>
						</span>
					</p>
					<p class="card-text text-decoration-none">
						@Html.Raw(Model.ShortDescription)
					</p>
					<div class="tag-list">
						<partial name="_TagList" model="@Model.Tags"/>
					</div>

					<div class="text-end">
						<a asp-controller="Blog"
						   asp-action="Post"
						   asp-route-year="@Model.PostedDate.Year"
						   asp-route-month="@Model.PostedDate.Month"
						   asp-route-day="@Model.PostedDate.Day"
						   asp-route-slug="@Model.UrlSlug"
						   class="btn btn-primary"
						   title="@Model.Title">
						   Xem chi tiết
					   </a>
					</div>
				</div>
			</div>
		</div>
	</div>
</article>