@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel
@{
	ViewData["PageTitile"] = "Danh sách bài viết";
	var postsList = ViewBag.PostsList as IPagedList<Post>;
}

<h1>
	Danh sách bài viết
</h1>

<partial name="_PostFilterPane" model="Model" />

@if (postsList != null && postsList.Count > 0)
{
   <table class="table table-responsive table-striped">
        <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
 	        <th>Chủ đề</th>
            <th>Xuất bản</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var post in postsList)
        {
            <tr>
                <td>
                    <a  asp-area="Admin"
                        asp-controller="Posts"
                        asp-action="Edit"
                        asp-route-id="@post.Id" 
                        class="text-bold text-decoration-none">
                         @post.Title
                    </a>
                    <p class="text-muted"> 
                         @post.ShortDescription
                    </p>
                </td>
                <td>
                    @post.Author.FullName
                </td>
                <td>
                    @post.Category.Name
                </td>
                <td>
                    <button onclick="@Url.Action("TogglePublished", "Posts"))" 
                                     class="btn btn-sm btn-outline-primary">
                                     @((post.Published ? "Có" : "Không"))
                    </button>
                      
                </td>
            </tr> 
        }
        </tbody>
   </table>

   <partial name="_Pager" model="postsList"/>
    
}
else
{
    <h1 class="text-danger">
        Không tìm thấy bài viết nào    
    </h1>
}

@section scripts
{
    <script>
        function togglePublished(postId) {
            const button = document.querySelector(`button[data-post-id="${postId}"]`);
            const isPublished = button.classList.contains("btn-success");
            button.classList.toggle("btn-success");
            button.classList.toggle("btn-secondary");
            button.textContent = isPublished ? "Không" : "Có";

        }
    </script>
}






